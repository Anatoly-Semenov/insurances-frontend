.auth
	flex-center()
	width 100%
	height 100vh
	background-color $color-background-main

	&__block
		display flex
		flex-direction column
		width 370px

	&__header, &__content, &__info
		width 100%

	&__header
		display flex
		justify-content space-between
		align-items center
		margin-bottom $gap

		&-logo
			width 105px

	&__link
		display flex
		justify-content flex-end
		align-items center
		font-size 14px
		color $color-text-secondary
		transition color $transition

		& > span
			margin-left 4px

		&:hover
			color $color-ui-hover

		&:active
			color $color-ui-active

	&__content
		display flex
		flex-direction column
		background-color $color-background
		border-radius 10px
		box-shadow 0 8px 15px rgba(81, 81, 105, 0.14)
		padding $gap-big

		&-logo
			height 38px
			pointer-events none
			user-select none

	&__info
		display flex
		justify-content space-between
		align-items center

		&-text
			display flex
			flex-direction column
			justify-content flex-start
			align-items flex-start

	&__title
		font-size 20px
		font-weight $medium
		color $color-text

	&__subtitle
		font-size 14px
		color $color-text-secondary
		margin-top 4px

	&__fields
		display flex
		flex-direction column
		margin-top $gap

		& > .ui-input:not(:first-child)
			margin-top $gap-small

		& .ui-input__error
			position relative
			bottom 0
			margin-bottom -10px

	&__submit
		margin-top $gap
		width 100%

	&__problems
		width 100%
		margin-top 4px
		font-size 12px
		height 30px
		padding-bottom 0

	&__asd
		min-height 60px
		min-width 60px
