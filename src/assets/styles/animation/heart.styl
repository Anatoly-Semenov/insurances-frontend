@keyframes heart
	0%
		opacity .5
		transform translateX(0px) translateY(0px) rotate(0deg) scale(1,1)
		animation-timing-function linear

	16%
		opacity .7
		transform translateX(0px) translateY(0px) rotate(0deg) scale(1.1,1.1)
		animation-timing-function linear

	32%
		opacity .9
		transform translateX(0px) translateY(0px) rotate(0deg) scale(1.2,1.2)
		animation-timing-function linear

	48%
		opacity 1
		transform translateX(0px) translateY(0px) rotate(0deg) scale(1.3,1.3)
		animation-timing-function linear

	64%
		opacity .9
		transform translateX(0px) translateY(0px) rotate(0deg) scale(1.2,1.2)
		animation-timing-function linear

	80%
		opacity .7
		transform translateX(0px) translateY(0px) rotate(0deg) scale(1.1,1.1)
		animation-timing-function linear

	100%
		opacity .5
		transform translateX(0px) translateY(0px) rotate(0deg) scale(1,1)
