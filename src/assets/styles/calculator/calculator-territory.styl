.calculator__territory
	display flex
	flex-direction column
	row-gap $gap-small
	column-gap $gap-small
	max-width 100%
	padding-bottom $gap-small

	& .ui-input, .ui-select
		max-width 90%

	&-type
		min-width 48%
		max-width 48%

	&-type > .ui-radio, .ui-select
		display flex
		flex-direction column
		row-gap $gap-small
		column-gap $gap-small
		max-width 90%
		margin-bottom $gap-small

	&-info
		display flex
		row-gap $gap-small
		column-gap $gap-small
		max-width 100%
		width 100%
		margin-bottom $gap-small

	&-subtitle
		font-weight $bold
		font-size 18px

	&-intro
		display flex
		justify-content space-between
		align-items center
		row-gap $gap-small
		column-gap $gap-small
		max-width 100%
		margin-bottom $gap-small
		width 100%

	&-buttons
		display flex
		align-items center
		justify-content flex-end
		row-gap $gap-small
		column-gap $gap-small

	&-required
		color $color-error
		font-weight $regular

	&-toggle
		border $border
		border-radius $border-radius-circle
		height 30px
		width 30px
		transition-mixin(color, border-color, transform)

		&:hover
			color $color-ui
			border-color $color-ui

		&:active
			color $color-ui-active
			border-color $color-ui-active

		&._open
			transform rotate(180deg)

	&-radio
		display flex
		flex-direction column
		justify-content flex-start
		align-items flex-start

		& .ui-radio
			height 100%
			display flex
			flex-direction column
			row-gap $gap-extra-small
			margin $gap-small 0


	&-data
		display flex
		flex-direction column
		align-items flex-start
		justify-content flex-start

		& > *:not(:first-child)
			margin-top $gap

	&-list
		max-width 90%
		display flex
		flex-direction column

		& .ui-checkbox
			margin-left 8px

			&:not(:first-child)
				padding-top $gap-small

	&-asset
		display flex
		flex-direction column
		row-gap $gap-small
		column-gap $gap-small

	&-delete
		margin-left auto
		margin-right auto

		& path
			fill $color-error
			transition fill $transition

		&:hover path
			fill $color-error-hover

		&:active path
			fill $color-error-active

	& .ui-table
		max-width "calc(100% + %s * 2)" % ($gap)
		width "calc(100% + %s * 2)" % ($gap)
		margin-left "calc(%s * -1)" % ($gap)

		& .ant-table
			&-content
				custom-scrollbar()

			&-tbody > tr
				height 52px

			&-tbody tr:first-child
				display none

			&-cell
				font-size 14px
				padding $gap-small

			& thead.ant-table-thead>tr:first-child>th:first-child,
			& thead.ant-table-thead>tr:first-child>th:last-child,
			& .ant-table-tbody tr:last-child td:first-child,
			& .ant-table-tbody tr:last-child td:last-child
			& .ant-table-fixed-left
				border-radius 0

			& tbody tr td:first-child
				border-left 0

			& tbody tr:last-child td
				border-right 0

		& tbody tr td.ant-table-cell
			margin auto

			& .ui-select, & .ui-input, & .ui-input-number
				min-width 100%
				width 100%

			& .ui-select
				margin-bottom 0
				max-width 300px

		& .ant-pagination
			padding-right $gap
			margin-bottom 0

	&._closed, &._closed &-subtitle, &._closed &-intro
		padding-bottom 0
		margin-bottom 0

