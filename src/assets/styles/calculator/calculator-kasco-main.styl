.calculator-kasco__main
	display flex
	flex-direction column
	justify-content flex-start
	align-items flex-start

	&-subtitle
		font-size 13px
		font-weight $medium
		color $color-text
		margin-top $gap

	&-img
		max-width 30%
		max-height 200px
		user-select none
		pointer-events none

		&._spectech
			max-width 40%
			transform scale(1.3) translate(-20px, 17px)
			opacity .9

	&-block
		display flex
		flex-direction column
		justify-content flex-start
		align-items flex-start
		width 100%

		&._bordered
			border-bottom $border
			padding-bottom $gap

	&-data
		display flex
		justify-content flex-start
		align-items flex-start
		width 100%

		& .ui-input, & .ui-input-number, & .ui-select, & .ui-date-picker, & .ui-checkbox
			max-width 40.6%
			min-width 40.6%

	&-data &-row, &-data &-empty
		max-width 40.6%
		min-width 40.6%

	&-list
		display flex
		flex-wrap wrap
		row-gap $gap-small
		column-gap $gap-small
		width 100%

		&:not(:first-child)
			margin-top $gap-small

		& .ui-input, & .ui-input-number, & .ui-select, & .ui-date-picker, & .ui-checkbox
			max-width 30.6%
			min-width 30.6%

			&._long
				max-width 100%
				min-width 100%

	&-list &-row, &-list &-empty
		max-width 30.6%
		min-width 30.6%

	&-info
		display flex
		flex-wrap wrap
		row-gap $gap-small
		column-gap $gap-small
		width 100%
		margin-left $gap

		& .ui-input, & .ui-input-number, & .ui-select, & .ui-date-picker, & .ui-checkbox
			max-width 270px
			min-width 270px

			&._long
				max-width 552px
				min-width 552px

	&-row
		display flex
		flex-direction column
		margin-top -19px

		&._gap
			margin-top $gap

	&-row &-subtitle
		margin-top 0
		margin-bottom 3px

	&-mark
		font-size 12px

	& hr
		width 100%
		margin-top $gap

	&-pledge
		width 100%
		display flex
		flex-wrap wrap
		row-gap $gap-small
		column-gap $gap-small
		justify-content flex-start
		align-items center

		& .ui-checkbox
			min-width 222px

	&-uppercase .ant-input
		text-transform uppercase

	&-car
		font-size 14px
		color $color-text
		margin-top $gap-extra-small

		& .ui-tag
			margin-left $gap-extra-small

	& .ui-alert
		width 100%
