.calculator__passport
	display flex
	flex-wrap wrap
	row-gap $gap-small
	column-gap $gap-small
	max-width 920px

	&-head
		display flex
		justify-content flex-end
		align-items center

	& .ui-input, & .ui-select, & .ui-date-picker
		max-width 31.6%

	&-address
		width 100%
		display flex
		flex-wrap wrap
		row-gap $gap-small
		column-gap $gap-small

		& .ui-input
			max-width 18%

	& &-long.ui-input
		max-width 64.5%

	&-delete
		margin-right $gap-small

		& path
			fill $color-error
			transition fill $transition

		&:hover path
			fill $color-error-hover

		&:active path
			fill $color-error-active

	&-add
		flex-center()
		width 100%
		height 36px
		border $border-dashed
		border-radius $border-radius
		margin-top $gap-small
		color $color-ui
		transition-mixin(border-color, background-color, color)

		& span
			margin-left $gap-extra-small

		&:hover
			border-color $color-ui-hover
			color $color-ui-hover
			background-color #00a4210d

		&:active
			border-color $color-ui-active
			color $color-ui-active
